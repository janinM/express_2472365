                    <a class="px-5 py-2 border-bottom border-dark" href="#">Ventas</a>
                    <a class="px-5 py-2 border-bottom border-dark" href="#">Cartera</a>
                    <a class="px-5 py-2 border-bottom border-dark" href="#">Abonos</a>
                </ul>
            </aside>
    
            <section class="col-12 col-md-10 my-0 d-flex justify-content-start flex-column align-items-center">
                <h1 class="text-center py-5 my-0">CREAR ABONO</h1>

                <form class="d-flex flex-column justify-content-center w-75 gap-lg-4 mb-5 mx-5">
                    <div class="d-flex justify-content-center gap-3">
                        <div class="div1 w-100">
                            <div class="mb-3">                  
                                <label for="cliente" class="form-label fw-bold">Cliente</label>
                                <input type="text" class="form-control" id="cliente"  placeholder="Cliente" >
                            </div>

                            <div class="mb-3">                  
                                <label for="total" class="form-label fw-bold">Total</label>
                                <input type="number" class="form-control" id="total"  placeholder="$" >
                            </div>
                            
                            <div class="mb-3">                  
                                <label for="factura" class="form-label fw-bold">Factura</label>
                                <input type="text" class="form-control" id="factura"  placeholder="Factura" >
                            </div>
                        </div>
    
                        <div class="div2 w-100">
                            <div class="mb-3">                  
                                <label for="resta" class="form-label fw-bold">Resta</label>
                                <input type="number" class="form-control" id="resta"  placeholder="$" >
                            </div>

                            <div class="mb-3">                  
                                <label for="abono" class="form-label fw-bold">Abono</label>
                                <input type="number" class="form-control" id="abono"  placeholder="$" >
                            </div>

                            <div class="mb-3">
                            <label for="estado" class="form-label fw-bold">Estado</label>
                            <select class="form-select" aria-label="Default select example">
                                <option value="1">Activo</option>
                                <option value="2">Inactivo</option>
                              </select>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center  gap-4  w-100" >
                        
                        <div class="div_botones w-100">
                            <button id="btRegistrar" type="button" class="btn btn-dark w-100 btn-styles">Enviar</button>
                        </div>

                        <div class="div_botones d-flex justify-content-center w-100">
                            <button  id="" type="submit" class="btn btn-dark w-100 btn-styles">Limpiar</button>
                        </div>
                    </div>
                    <p id="respuesta"></p>
                </form>

            </section>
        </div>

    </main>

